}

<div class="jumbotron">
    
</div>
<div class="row">
    <div class="col-md-4 pull-right">
        <button type="submit" class="btn btn-primary btnAction" id="btnAddHammer">
            <i class="icon-user icon-white"></i> Add New Hammer
        </button>
    </div>
</div>
    <div class="well">
        <div id="divDataTable" class="top-buffer">
            <table class="table table-striped table-responsive" id="tblHammers">
                <thead>

                    <tr>
                        <th></th>
                        <th class="gaf-link-color-black">
                            <a id="thName" title="Name" href="#" class="gaf-link-color-black">Name</a>
                        </th>
                        <th class="gaf-link-color-black">
                            <a id="thDescription" title="Description" href="#" class="gaf-link-color-black">Description</a>
                        </th>
                        <th class="gaf-link-color-black">
                            <a id="thCategory" title="Category" href="#" class="gaf-link-color-black">Category</a>
                        </th>
